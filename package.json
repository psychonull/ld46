{
	"name": "ld46",
	"version": "1.0.0",
	"description": "A template project for Phaser3 using Parceljs",
	"scripts": {
		"start": "parcel src/index.html -p 8000",
		"build": "parcel build src/index.html --out-dir dist",
		"lint": "eslint src/**/*.{js,jsx} --fix",
		"prettier": "prettier --single-quote --trailing-comma none --write src/**/*.{js,jsx,json,css,scss,md}"
	},
	"author": "psychonull",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/psychonull/ld46.git"
	},
	"homepage": "https://github.com/psychonull/ld46",
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.5",
		"babel-eslint": "^10.1.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"cssnano": "^4.1.10",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-import-resolver-babel-module": "^5.1.2",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-prettier": "^3.1.3",
		"husky": "^4.2.5",
		"lint-staged": "^10.1.5",
		"minimist": ">=1.2.2",
		"parcel-plugin-clean-easy": "^1.0.2",
		"parcel-plugin-static-files-copy": "^2.2.1",
		"prettier": "^2.0.4"
	},
	"dependencies": {
		"phaser": "^3.22.0"
	},
	"parcelCleanPaths": [
		"dist"
	],
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js,css,md}": [
			"npm run prettier",
			"npm run lint"
		]
	}
}
